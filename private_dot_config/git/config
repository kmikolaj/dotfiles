[user]
	name = Jakub Miko≈Çajczyk
	email = kmikolaj@gmail.com
[log]
	decorate = auto
[core]
	autocrlf = input
	safecrlf = true
	;pager = diff-so-fancy | less --tabs=4 -RFX
	editor = nvim
	commitGraph = true
[diff]
	algorithm = histogram
	colorMoved = zebra
	tool = meld
[difftool]
	prompt = false
[diff "bin"]
	textconv = hexdump -v -C
[gc]
	writeCommitGraph = true
	reflogExpire = 200
	reflogExpireUnreachable = 90
[grep]
	lineNumber = true
[merge]
	ff = no
	conflictStyle = diff3
	tool = meld
[mergetool]
	prompt = false
[mergetool "smerge"]
	cmd = smerge mergetool \"$BASE\" \"$LOCAL\" \"$REMOTE\" -o \"$MERGED\"
	hideResolved = true
[mergetool "meld"]
	hideResolved = true
	cmd = meld --auto-merge "$LOCAL" "$BASE" "$REMOTE" --output "$MERGED"
[fetch]
	prune = true
[pager]
	difftool = true
[push]
	default = simple
	followTags = true
[pull]
	ff = only
	rebase = merges
[rebase]
	autosquash = true
	autostash = true
	rebaseMerges = true
	updateRefs = true
[color]
	ui = auto
[rerere]
	enabled = true
[icdiff]
	options = --line-numbers --no-bold --is-git-diff
[init]
	defaultBranch = master
[alias]
	amend = commit --amend
	fastamend = commit --amend --no-edit
	st = status
	ls = log --oneline
	last = log -1 HEAD --stat
	cm = commit -m
	rv = remote -v
	dv = difftool -y -t nvimdiff
	undo = reset --soft HEAD^
	unstage = reset HEAD --
	root = rev-parse --show-toplevel
	sw = switch
	wdiff = diff --word-diff=color
	difft = difftool -y -x 'difft --color always --display side-by-side-show-both'
	ffpull = pull --ff
	fpush = push --force-with-lease
	update = !git pull origin $(git rev-parse --abbrev-ref HEAD)
	graph = commit-graph write --reachable
	recover = "!f() { [ -z $1 ] || [ -z $2 ] || (git checkout $1 -- $2;) && return 1; }; f"
	sync = "!f() { [ -z $1 ] || (git remote prune $1; git remote update $1;) && return 1 ; }; f"
	get = "!f() { [ -z $1 ] || (git stash; git switch $1; git pull --rebase --ff origin $1; git stash pop;) && return 1 ; }; f"
[credential]
	helper = store
